// Change it fo false when you run it in Production mode
DEV_MODE=true

PORT=1234

// Redis Configuration
// Option 1: Upstash Redis (recommended for serverless/Vercel)
UPSTASH_REDIS_REST_URL=https://your-redis.upstash.io
UPSTASH_REDIS_REST_TOKEN=your-upstash-token

// Option 2: Traditional Redis (for local dev or self-hosted)
REDIS_EXPIRATION=300 # 5 minutes in seconds
REDIS_USERNAME=default
REDIS_PASSWORD=your_redis_password
REDIS_PORT=6379
REDIS_HOST=your_redis_host


ANILIST_API_URL=https://graphql.anilist.co/
CONSUMET_API_URL=https://example.com
ANIWATCH_API_URL=https://example.com

# HiAnime API (ryanwtf88 version) - supports Hindi dub
# Deploy your own: https://github.com/ryanwtf88/hianime-api
HIANIME_API_URL=https://your-hianime-api.com

# ToonStream API - Hindi dubbed anime
# Deploy your own: https://github.com/ryanwtf88/toonstream-api
TOONSTREAM_API_URL=https://your-toonstream-api.com

ANILIST_CLIENT_ID=your_client_id
ANILIST_CLIENT_SECRET=your_client_secret